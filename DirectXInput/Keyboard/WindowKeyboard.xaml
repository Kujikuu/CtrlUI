                        <Button Name="key_Right" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp"/>
                    </StackPanel>
                    <!-- Key Row 5 -->
                    <StackPanel Name="sp_Row5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                        <Button Name="key_Control" Width="70" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp"/>
                        <Button Name="key_Alt" Width="70" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp"/>
                        <Button Name="key_LeftWindows" Width="100" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp"/>
                        <Button Name="key_Space" Width="139" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp"/>
                        <Button Name="key_End" Width="70" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp"/>
                        <Button Name="key_EmojiList" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp">
                            <emoji:TextBlock Text="😄"/>
                        </Button>
                        <Button Name="key_TextList" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/List.png" Height="30"/>
                        </Button>
                        <Button Name="key_VolumeDown" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp">
                            <Image Name="image_VolumeDown" Source="pack://siteoforigin:,,,/Assets/Default/Icons/VolumeDown.png" Height="30"/>
                        </Button>
                        <Button Name="key_VolumeUp" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonKey_PreviewKeyUp" PreviewMouseUp="ButtonKey_PreviewMouseUp">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/VolumeUp.png" Height="30"/>
                        </Button>
                        <Button Name="key_ScrollMove" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonScrollMove_PreviewKeyUp" PreviewMouseUp="ButtonScrollMove_PreviewMouseUp">
                            <Image Name="image_ScrollMove" Source="pack://siteoforigin:,,,/Assets/Default/Icons/KeyboardMove.png" Height="30"/>
                        </Button>
                        <Button Name="key_Close" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonClose_PreviewKeyUp" PreviewMouseUp="ButtonClose_PreviewMouseUp">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="30"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- TextList Popup -->
        <Border Name="border_TextListPopup" CornerRadius="4" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.95"/>
            </Border.Background>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- No texts set -->
                <TextBlock Name="textblock_TextListNoTextSet" Visibility="Collapsed" Margin="4" FontSize="{StaticResource TextSizeLarge}" Text="No texts are set, you can add texts in the DirectXInput settings." Style="{StaticResource TextBlockWhite}"/>

                <!-- Text ListBox -->
                <ListBox Name="listbox_TextList" Background="{DynamicResource ApplicationAccentLightBrush}" Margin="4" MaxHeight="210" MinWidth="400" MaxWidth="640" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemColor}" ItemTemplate="{StaticResource ListboxItemTextList}" Style="{StaticResource ListBoxVertical}" PreviewKeyUp="listbox_TextList_PreviewKeyUp" PreviewMouseUp="listbox_TextList_PreviewMouseUp"/>

                <!-- Popup Close Button -->
                <Button Name="key_TextListClose" Margin="6,2,6,6" HorizontalAlignment="Stretch" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonCloseTextList_PreviewKeyUp" PreviewMouseUp="ButtonCloseTextList_PreviewMouseUp">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="30"/>
                        <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/BackOff.png" Margin="10,0,0,0" Height="26"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Emoji Popup -->
        <Border Name="border_EmojiListPopup" CornerRadius="4" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource ApplicationBlackColor}" Opacity="0.95"/>
            </Border.Background>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Emoji ListBox -->
                <ListBox Name="listbox_EmojiList" Background="{DynamicResource ApplicationAccentLightBrush}" Margin="4" MaxHeight="220" MinWidth="400" MaxWidth="640" SelectionMode="Single" ItemContainerStyle="{StaticResource ListBoxItemColor}" ItemTemplate="{StaticResource ListboxItemEmojiList}" Style="{StaticResource ListBoxWrapPanelHorizontal}" PreviewKeyUp="listbox_EmojiList_PreviewKeyUp" PreviewMouseUp="listbox_EmojiList_PreviewMouseUp"/>

                <Grid Margin="2,4,4,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Emoji Switch Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Name="key_EmojiSmiley" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonSwitchEmoji_PreviewKeyUp" PreviewMouseUp="ButtonSwitchEmoji_PreviewMouseUp">
                            <emoji:TextBlock Name="key_EmojiSmileyText" Text="😀" FontSize="{StaticResource TextSizeLarge}"/>
                        </Button>
                        <Button Name="key_EmojiActivity" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonSwitchEmoji_PreviewKeyUp" PreviewMouseUp="ButtonSwitchEmoji_PreviewMouseUp">
                            <emoji:TextBlock Name="key_EmojiActivityText" Text="🏀" FontSize="{StaticResource TextSizeLarge}"/>
                        </Button>
                        <Button Name="key_EmojiFood" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonSwitchEmoji_PreviewKeyUp" PreviewMouseUp="ButtonSwitchEmoji_PreviewMouseUp">
                            <emoji:TextBlock Name="key_EmojiFoodText" Text="🍓" FontSize="{StaticResource TextSizeLarge}"/>
                        </Button>
                        <Button Name="key_EmojiNature" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonSwitchEmoji_PreviewKeyUp" PreviewMouseUp="ButtonSwitchEmoji_PreviewMouseUp">
                            <emoji:TextBlock Name="key_EmojiNatureText" Text="🐱" FontSize="{StaticResource TextSizeLarge}"/>
                        </Button>
                        <Button Name="key_EmojiOther" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonSwitchEmoji_PreviewKeyUp" PreviewMouseUp="ButtonSwitchEmoji_PreviewMouseUp">
                            <emoji:TextBlock Name="key_EmojiOtherText" Text="⏱" FontSize="{StaticResource TextSizeLarge}"/>
                        </Button>
                        <Button Name="key_EmojiPeople" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonSwitchEmoji_PreviewKeyUp" PreviewMouseUp="ButtonSwitchEmoji_PreviewMouseUp">
                            <emoji:TextBlock Name="key_EmojiPeopleText" Text="🧑" FontSize="{StaticResource TextSizeLarge}"/>
                        </Button>
                        <Button Name="key_EmojiSymbol" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonSwitchEmoji_PreviewKeyUp" PreviewMouseUp="ButtonSwitchEmoji_PreviewMouseUp">
                            <emoji:TextBlock Name="key_EmojiSymbolText" Text="❤️" FontSize="{StaticResource TextSizeLarge}"/>
                        </Button>
                        <Button Name="key_EmojiTravel" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonSwitchEmoji_PreviewKeyUp" PreviewMouseUp="ButtonSwitchEmoji_PreviewMouseUp">
                            <emoji:TextBlock Name="key_EmojiTravelText" Text="🚌" FontSize="{StaticResource TextSizeLarge}"/>
                        </Button>
                    </StackPanel>

                    <!-- Popup Close Button -->
                    <Button Grid.Column="1" Name="key_EmojiClose" Height="40" Style="{StaticResource ButtonKeyboard}" PreviewKeyUp="ButtonCloseEmoji_PreviewKeyUp" PreviewMouseUp="ButtonCloseEmoji_PreviewMouseUp">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Close.png" Height="30"/>
                            <Image Source="pack://siteoforigin:,,,/Assets/Default/Icons/Buttons/BackOff.png" Margin="10,0,0,0" Height="26"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>